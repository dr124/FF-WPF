<Window x:Class="FF_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF_WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="593*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <Button Command="{Binding LoadImageCommand}" Content="Load image"/>
            <Separator Height="10"/>
            <RadioButton Content="Bradley's thresholding" />
            <RadioButton Content="Gaussian blur" />
            <Separator Height="10"/>
        </StackPanel>
        <Border Margin="10,10,10,10" BorderThickness="1" BorderBrush="Black" Grid.Column="1">
            <Image Source="{Binding Image}"/>
        </Border>
    </Grid>
</Window>
